<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Listdown</title>
	 
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

	<%= csrf_meta_tags %>
</head>
<body>

	


	<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "List Down", root_path%></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <% if logged_in? %>
			<li><%= link_to "Todo Lists", todo_lists_path%></li>
			<li><%= link_to "Sign Out", logout_path, method: :delete %></li>
			<% else %>
			<li><%= link_to "Sign Up", new_user_path%></li>
			<li><%= link_to "Sign In", new_user_session_path%></li>
			<% end %>
      <li class="has-dropdown">
        
      </li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      
    </ul>
  </section>
</nav>

	
<div id="grad-home">
	<%= yield %>
</div>
<footer>
&copy; TekSavant 2015
</footer>

	 <script type="text/javascript">
  
  
  $(".top-bar").fadeIn()
.css({top:-1000,position:'relative'})
.animate({top:0}, 1500, function() {
    //callback
});
$("#grad-home").fadeIn()
.css({top:1000,position:'relative'})
.animate({top:0}, 800, function() {
    //callback
});
  $("#grad-home h1").fadeIn()
.css({top:1000,position:'relative'})
.animate({top:0}, 1500, function() {
    //callback
});
  $("#grad-home h4").fadeIn()
.css({top:1000,position:'relative'})
.animate({top:0}, 1300, function() {
    //callback
});
$("#grad-home a").fadeIn()
.css({top:1000,position:'relative'})
.animate({top:260}, 1300, function() {
    //callback
});

 
  </script>
	


</body>
</html>
