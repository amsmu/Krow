<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>



<%= link_to 'New Todo list', new_todo_list_path, class: "button tiny " %>
<% @todo_lists.reverse_each do |todo_list| %>
<div id="todo-box">
  <div class="todo_list" id="<%= dom_id(todo_list)%>" class="todo-index">
    
    <h2><%= todo_list.title %></h2>
    <h5><%= todo_list.description %></h4>
      <div class="options row">
        <div class="small-3 columns"><%= link_to 'List Items', todo_list_todo_items_path(todo_list), class: "button tiny secondary " %></div>
        <div class="small-3 columns"><%= link_to 'Show', todo_list, class: "button tiny secondary " %></div>
        <div class="small-3 columns"><%= link_to 'Edit', edit_todo_list_path(todo_list) , class: "button tiny "%></div>
        <div class="small-3 columns"><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } , class: "button tiny alert"%></div>
        
      </div>
    </div>
  </div>
  <% end %>
  

  <br>


